{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pret</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pret.id }}</td>
            </tr>
            <tr>
                <th>Somme</th>
                <td>{{ pret.somme }}</td>
            </tr>
            <tr>
                <th>Interet</th>
                <td>{{ pret.interet }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if pret.dateCreation %}{{ pret.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if pret.dateFin %}{{ pret.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pret_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pret_edit', { 'id': pret.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
