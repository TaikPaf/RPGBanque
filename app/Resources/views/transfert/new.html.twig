{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-6 center col-md-offset-3 text-center">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Transfert d'argent</h2>
                <p class="panel-subtitle">
                <div class="alert alert-warning text-justify">
                    <ul>
                        <li>Pensez à bien vérifier la somme à transférer</li>
                        <li>Faites attention au destinataire !</li>
                    </ul>
                </div>
                </p>
            </header>
            {{ form_start(form) }}
            <div class="panel-body">
                <div>
                    {{ form_label(form.somme, 'Somme à transférer') }}
                    {{ form_errors(form.somme) }}
                    {{ form_widget(form.somme, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div>
                    {{ form_label(form.crediteur, 'Nom du destinataire') }}
                    {{ form_errors(form.crediteur) }}
                    {{ form_widget(form.crediteur, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div>

                    {{ form_errors(form.debiteur) }}
                    {{ form_widget(form.debiteur, { 'attr': {'style': 'display:none'} }) }}
                </div>


                <div class="center">
                    <input type="submit" value="Valider" class="btn btn-success"/>
                </div>

                {{ form_end(form) }}


            </div>
        </section>
    </div>
{% endblock %}
