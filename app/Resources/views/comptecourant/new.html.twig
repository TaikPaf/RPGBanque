{% extends 'base.html.twig' %}

{% block body %}


    <div class="col-md-6 center col-md-offset-3">
        <section class="panel">
            <header class="panel-heading">
                <h2 class="panel-title">Création d'un compte courant</h2>
                <p class="panel-subtitle">
                <div class="alert alert-warning">
                    <ul>
                        <li>
                            Le solde à la création doit être de 100€, offerts par la maison.
                        </li>
                        <li>
                            Le numéro de compte doit être créé de manière aléatoire de 9 chiffres ( voir <a href="https://www.random.org/integers/">ici</a> )
                        </li>
                    </ul>
                </div>
                </p>
            </header>
            {{ form_start(form) }}
            <div class="panel-body">
                <div>
                    {{ form_label(form.solde, 'Solde du compte') }}
                    {{ form_errors(form.solde) }}
                    {{ form_widget(form.solde, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div>
                    {{ form_label(form.numeroCompte, 'Numéro du compte') }}
                    {{ form_errors(form.numeroCompte) }}
                    {{ form_widget(form.numeroCompte, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div>
                    {{ form_label(form.user, 'Client') }}
                    {{ form_errors(form.user) }}
                    {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
                </div>

                    <div class="center">
                        <input type="submit" value="Create" class="btn btn-success"/>
                    </div>

                    {{ form_end(form) }}


            </div>
        </section>
    </div>



